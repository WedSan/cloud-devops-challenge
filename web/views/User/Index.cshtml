@model IEnumerable<Domain.Entities.User>

@{
    ViewData["Title"] = "All Users";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
@Html.Partial("_Header")
<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
<h2>Users</h2>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>
                <a href="@Url.Action("EditEmail", new { id = user.Id })" class="btn btn-info">Edit Email</a>
                <a href="@Url.Action("EditPassword", new { id = user.Id })" class="btn btn-warning">Edit Password</a>
                <a href="@Url.Action("Delete", new { id = user.Id })" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New User</a>
</div>
</body>
<html>