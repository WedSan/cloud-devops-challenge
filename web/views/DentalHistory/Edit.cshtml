@model web.DTO.DentalHistory.UpdateDentalHistoryView
@{
    var id = ViewData["dentalHistoryId"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Dental History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
@Html.Partial("_Header")
<h2 class="mt-4 text-center">Edit Dental History</h2>

<div class="container d-flex justify-content-center mt-5">
    <form method="post" action="@Url.Action("Edit", "DentalHistory", new { dentalHistoryId = id })">
        @Html.AntiForgeryToken()
        <table class="table table-bordered">
            <tr>
                <th><label asp-for="Procedures">Procedures</label></th>
                <td>
                    <input asp-for="Procedures" name="NewProcedures" class="form-control"/>
                    <span asp-validation-for="Procedures" class="text-danger"></span>
                </td>
            </tr>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-success mt-3">Save Changes</button>
        </div>
    </form>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Index", "DentalHistory")" class="btn btn-secondary">Back to List</a>
</div>
</body>
</html>
