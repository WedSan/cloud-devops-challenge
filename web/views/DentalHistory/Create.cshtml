@model web.DTO.DentalHistory.AddDentalHistoryRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
@Html.Partial("_Header")
<h2 class="mt-4 text-center">Create New Dental History</h2>

<div class="container d-flex justify-content-center mt-5">
    <form  method="post" class="container mt-5" action="@Url.Action("Create", "DentalHistory")">
        @Html.AntiForgeryToken()
        <table class="table table-bordered">
            <tr>
                <th><label asp-for="UserId">UserId</label></th>
                <td>
                    <input asp-for="UserId" name="UserId" class="form-control"/>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="Procedures">Procedures</label></th>
                <td>
                    <input asp-for="Procedures" name="Procedures" class="form-control"/>
                    <span asp-validation-for="Procedures" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="ConsultationDate">Consultation Date</label></th>
                <td>
                    <input asp-for="ConsultationDate" name="ConsultationDate" type="date" class="form-control"/>
                    <span asp-validation-for="ConsultationDate" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th><label asp-for="ToothCondition">Tooth Condition in the Consultation Date</label></th>
                <td>
                    <input asp-for="ToothCondition" name="ToothCondition" class="form-control"/>
                    <span asp-validation-for="ToothCondition" class="text-danger"></span>
                </td>
            </tr>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-primary mt-3">Create</button>
        </div>
    </form>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Index", "DentalHistory")" class="btn btn-secondary">Back to List</a>
</div>
</body>
</html>
