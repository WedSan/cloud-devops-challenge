@model Domain.Entities.DentalHistory

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Dental History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
@Html.Partial("_Header")
<h2 class="mt-4 text-center">Delete Dental History</h2>

<div class="container d-flex justify-content-center mt-5">
    <form method="post" action="@Url.Action("DeleteConfirmed", "DentalHistory", new { dentalHistoryId = Model.ID })">
        @Html.AntiForgeryToken()
        <div class="alert alert-warning text-center" role="alert">
            <p>Are you sure you want to delete this dental history record?</p>
        </div>
        <input type="hidden" asp-for="Id"/>
        <div class="text-center">
            <button type="submit" class="btn btn-danger mt-3">Delete</button>
            <a href="@Url.Action("Index", "DentalHistory")" class="btn btn-secondary mt-3">Cancel</a>
        </div>
    </form>
</div>
</body>
</html>