@model web.DTO.DataMonitoring.AddDataMonitoringRequest

@{
    ViewData["Title"] = "Create Monitoring Data";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
@Html.Partial("_Header")
<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <form method="post" action="@Url.Action("Create", "MonitoringData")">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label for="UserId">User ID</label>
            <input type="number" class="form-control" id="UserId" name="UserId" asp-for="UserId" required />
        </div>

        <div class="form-group mb-3">
            <label for="DentalProblems">Dental Problems (comma-separated)</label>
            <input type="text" class="form-control" id="DentalProblems" name="DentalProblems" asp-for="DentalProblems" required />
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
        <a href="@Url.Action("Index", "MonitoringData")" class="btn btn-secondary">Back to List</a>
    </form>
</div>
</body>
</html>